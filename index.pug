        form.request#form-request
            h2.request__title.title Заявка на подбор путешествия
            .request__content_item
                span.request__content_title НЕМНОГО О ВАС
                .request__content_item_wrap
                    label.request__content_about-you.wrap-label
                        span ИМЯ 
                        input.request__content_name(name="username" type="text")
                    label.request__content_tel.wrap-label
                        span ТЕЛЕФОН 
                        input.request__content_tel(placeholder="+7" name="phone" type="text")
            .request__content_item
                span.request__content_title О ПУТЕШЕСТВИИ
                .request__content_item_wrap
                    label.request__content_about-you.wrap-label
                        span КУДА И КОГДА ХОТИТЕ ПОЕХАТЬ ?
                        input.request__content_name(placeholder="Континент, страна или город" name="where" type="text")
                    label.request__content_tel.wrap-label
                        span КОГДА?
                        input.request__content_tel(placeholder="Даты или временной интервал" name="when" type="text")
